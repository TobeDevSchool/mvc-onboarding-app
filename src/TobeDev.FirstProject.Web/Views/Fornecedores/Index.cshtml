@using TobeDev.FirstProject.Web.Models.Fornecedores;
@model ListaFornecedoresViewModel


<h1>Lista de Fornecedores</h1>
<a class="btn btn-primary" href="@Url.Action("Fornecedor","Fornecedores",new {id = 0})">Adicionar Fornecedor</a>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Razão Social</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Fornecedores.Any())
            {
                foreach (var fornecedor in Model.Fornecedores)
                {
                    <tr>
                        <th scope="row">@fornecedor.Id</th>
                        <td>@fornecedor.RazaoSocial</td>
                        <td>@fornecedor.CNPJ</td>
                        <td>
                            <a href="@Url.Action("Fornecedor","Fornecedores",new {id = fornecedor.Id})" title="Editar">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a href="@Url.Action("Fornecedor","Fornecedores",new {id = fornecedor.Id})" title="Excluir">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>